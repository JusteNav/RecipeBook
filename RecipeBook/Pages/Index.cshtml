@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">A fed person is a happy person!</h1>
    <p>Please choose your ingredients:</p>
</div>
<div>
    <form method="post">
        @for (int i = 1; i < Model.CategoryIds.Length; i++)
        {
          <input type = "checkbox" name = "CheckedCategories" value = "@Model.CategoryIds[i]" > @Model.CategoriesForPrinting[i]
        }
        <input type="submit" value="Show Recipes"> 
    </form>
</div>
