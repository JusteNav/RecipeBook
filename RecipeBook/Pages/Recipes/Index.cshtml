</p>

@for (int i = 1; i < Model.RecipeCategoryIds.Length; i++)
{
              <input type = "checkbox" name = "RecipeCategories" value = "@Model.RecipeCategoryIds[i]" > @Model.RecipeCategoriesForPrinting[i]
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayedRecipes[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayedRecipes[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DisplayedRecipes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
