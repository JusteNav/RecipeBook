@page
@model RecipeBook.Pages.Recipes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>

<h4>@Html.DisplayFor(model => model.Recipe.Title)</h4>

    <img class = "recipepic-big" src="~/images/@Model.Recipe.PictureTitle" width="300px" alt="food picture"/>

    <hr />
    <p>
        <b>Category:   </b>
            @Html.DisplayFor(model => model.Recipe.Category)
    </p>
    
    <form method="post">
        <input type="hidden" asp-for="Recipe.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
