@page
@model RecipeBook.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Recipe.Title)</h2>

<div>
    <img class = "recipepic-big" src="~/images/@Model.Recipe.PictureTitle" width="400px" alt="food picture"/>

    <hr />
    <p>
        <b>Category:   </b>
        @Html.DisplayFor(model => model.Recipe.Category)
    </p>

        <h4>Ingredients:</h4>
        <ul>
        @foreach (string ingredient in Model.Ingredients)
        {
                <li>
                @ingredient
                </li>
        }
        </ul>
        <hr />

        <h4>Steps:</h4>
        <ol>
            @for (int i = 0; i < Model.Steps.Count; i++)
            {
                 <li>
                    @Model.Steps[i]
                </li>
            }

        </ol>
</div>
    <hr />

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe?.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Recipe?.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>
